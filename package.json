{
  "name": "hypercard-react",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/inventory",
    "build": "npm run build -w packages/engine && npm run build -w apps/inventory && npm run build -w apps/todo && npm run build -w apps/crm && npm run build -w apps/book-tracker-debug",
    "storybook": "npm run storybook -w apps/inventory",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --build",
    "test": "npm run storybook:check && npm run test -w packages/engine",
    "build-storybook": "npm run build-storybook -w apps/inventory",
    "storybook:check": "node scripts/storybook/check-taxonomy.mjs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@storybook/addon-a11y": "^10.2.10",
    "@storybook/addon-docs": "^10.2.10",
    "@storybook/addon-onboarding": "^10.2.10",
    "@storybook/addon-vitest": "^10.2.10",
    "@storybook/react": "^10.2.10",
    "@storybook/react-vite": "^10.2.10",
    "storybook": "^10.2.10",
    "vitest": "^4.0.18"
  }
}
