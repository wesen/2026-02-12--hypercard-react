{
  "name": "hypercard-react",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev -w apps/inventory",
    "build": "npm run build -w packages/engine && npm run build -w apps/inventory && npm run build -w apps/todo && npm run build -w apps/crm && npm run build -w apps/book-tracker-debug",
    "storybook": "npx storybook dev -p 6006 --config-dir apps/inventory/.storybook",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --build",
    "test": "npm run test -w packages/engine"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "vitest": "^4.0.18"
  }
}
