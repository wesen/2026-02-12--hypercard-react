{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "@hypercard/engine": ["../../packages/engine/src"],
      "@hypercard/engine/*": ["../../packages/engine/src/*"],
      "@hypercard/confirm-runtime": ["../../packages/confirm-runtime/src"],
      "@hypercard/confirm-runtime/*": ["../../packages/confirm-runtime/src/*"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/engine" },
    { "path": "../../packages/confirm-runtime" }
  ]
}
